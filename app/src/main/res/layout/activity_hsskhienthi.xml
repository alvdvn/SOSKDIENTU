<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout"
    android:orientation="vertical"
    tools:context=".activity.HoSoSucKhoe.HSSKhienthiActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Hồ Sơ Sức Khỏe "
        android:textColor="#F9FAFB"
        android:textSize="30dp"

        android:layout_marginTop="15dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="666dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/bogoclayout">
        <TextView
            android:id="@+id/tv_hoten2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Họ tên:"
            android:layout_below="@+id/tv_maTV"
            android:textColor="#050505"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_namsinh2"
            android:text="Ngày tháng năm sinh:"
            android:layout_below="@+id/tv_hotenTV"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_gioitinh2"
            android:layout_marginLeft="20dp"
            android:text="Giới tính:"
            android:layout_below="@+id/tv_namsinh2"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sodienthoai2"
            android:text="SĐT:"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_gioitinh2"
            android:textColor="#673AB7"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_socancuoc2"
            android:text="Số Căn Cước:"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_sodienthoai2"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sobaohiemyte2"
            android:text="Bảo Hiểm Y tê:"
            android:layout_below="@+id/tv_socancuoc2"
            android:textColor="#8BC34A"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nhietdo2"
            android:text="Nhiệt Độ:"
            android:layout_below="@+id/tv_sobaohiemyte2"
            android:textColor="#00BCD4"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_huyetap2"
            android:text="Huyết áp:"
            android:textColor="#9C27B0"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_nhietdo2"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nhommau2"
            android:text="Nhóm máu:"
            android:textColor="#f00"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_huyetap2"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nhiptim2"
            android:text="Nhịp tim:"
            android:textColor="#009688"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_nhommau2"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_chieucao2"
            android:text="Chiều cao:"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_nhommau2"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_cannang2"
            android:text="Cân nặng :"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_chieucao2"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="130dp"
            android:backgroundTint="#58DFB4"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:text="Update "
            android:id="@+id/btnupdate5"/>

    </LinearLayout>

</LinearLayout>