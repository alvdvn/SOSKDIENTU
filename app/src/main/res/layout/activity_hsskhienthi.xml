<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HoSoSucKhoe.HSSKhienthiActivity">
    <TextView
        android:id="@+id/tv_hoten2"
        android:text="Họ tên:"
        android:layout_below="@+id/tv_maTV"
        android:textColor="#050505"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_namsinh2"
        android:text="Ngày tháng năm sinh:"
        android:layout_below="@+id/tv_hotenTV"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_gioitinh2"
        android:text="Giới tính:"
        android:layout_below="@+id/tv_namsinh2"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sodienthoai2"
        android:text="SĐT:"
        android:layout_below="@+id/tv_gioitinh2"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_socancuoc2"
        android:text="Số Căn Cước:"
        android:layout_below="@+id/tv_sodienthoai2"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sobaohiemyte2"
        android:text="Bảo Hiểm Y tê:"
        android:layout_below="@+id/tv_socancuoc2"
        android:textColor="#8BC34A"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_nhietdo2"
        android:text="Nhiệt Độ:"
        android:layout_below="@+id/tv_sobaohiemyte2"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_huyetap2"
        android:text="Huyết áp:"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_nhietdo2"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_nhommau2"
        android:text="Nhóm máu:"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_huyetap2"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_nhiptim2"
        android:text="Nhịp tim:"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_nhommau2"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_chieucao2"
        android:text="Chiều cao:"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_nhommau2"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_cannang2"
        android:text="Cân nặng :"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_chieucao2"
        android:layout_height="wrap_content"/>
</LinearLayout>