<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_layout"
    tools:context=".activity.DatLichKham.InfoActivity">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đặt khám"
        android:textSize="14pt"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="547dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bogoclayout"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="412dp"
            android:layout_height="451dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_hvtdl"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:hint="Họ Và tên"
                    android:textSize="12pt"

                    />

                <EditText
                    android:id="@+id/ed_cmnddl"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Số CMND/CCCD"
                    android:textSize="12pt"

                    />

                <EditText
                    android:id="@+id/ed_date"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Chọn ngày khám"
                    android:textSize="12pt"

                    />

                <EditText
                    android:id="@+id/ed_time"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Chọn giờ khám"
                    android:textSize="12pt"

                    />

                <EditText
                    android:id="@+id/ed_trieuchung"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Triệu chứng"
                    android:textSize="12pt"

                    />

                <CheckBox
                    android:id="@+id/cb_bhyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Có BHYT"
                    android:textColor="@color/black"
                    android:textSize="14pt"
                    android:textStyle="bold" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btnback" />

        <Button
            android:id="@+id/btnxacnhan"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bogocbutton"
            android:text="Xác nhận Đặt lịch"
            android:textSize="10pt" />
    </LinearLayout>

</LinearLayout>