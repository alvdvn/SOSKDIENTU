<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HsSucKhoeFragment">

    <TextView
        android:id="@+id/tv_hoten1"
        android:text="Họ tên:"
        android:layout_below="@+id/tv_maTV"
        android:textColor="#050505"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_namsinh1"
        android:text="Ngày tháng năm sinh:"
        android:layout_below="@+id/tv_hotenTV"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_diachi1"
        android:text="Địa chỉ:"
        android:layout_below="@+id/tv_namsinh"
        android:textColor="#009688"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_gioitinh1"
        android:text="Giới tính:"
        android:layout_below="@+id/tv_diachi"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sodienthoai1"
        android:text="SĐT:"
        android:layout_below="@+id/tv_gioitinh"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_socancuoc1"
        android:text="Số Căn Cước:"
        android:layout_below="@+id/tv_sodienthoai"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sobaohiemyte1"
        android:text="Bảo Hiểm Y tê:"
        android:layout_below="@+id/tv_socancuoc"
        android:textColor="#8BC34A"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_thoihantu1"
        android:text="Thời hạn từ ngày:"
        android:layout_below="@+id/tv_sobaohiemyte"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_thoihanden1"
        android:text="Thời hạn đến ngày:"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_thoihantu"
        android:layout_height="wrap_content"/>

</LinearLayout>