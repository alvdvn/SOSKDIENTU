<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.khaibaoyte.man2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Tờ Khai Y Tế"
        android:textAlignment="center"
        android:background="#CE53DC"
        android:textColor="#F9FAFB"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/tvHT"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="30"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="Họ Tên : "
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="261dp" />


    <TextView
        android:id="@+id/tvNS"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="Năm Sinh : "
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="354dp" />


    <TextView
        android:id="@+id/tvCCCD"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="CCCD : "
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="447dp" />


    <TextView
        android:id="@+id/tvQT"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="Quốc Tịch : "
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="171dp" />


    <TextView
        android:id="@+id/tvNOHT"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="Địa Chỉ : "
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/tvSDT"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="SĐT : "
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Trong vòng 14 ngày có đi qua khu vực/lãnh  thổ nào không ? "
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="516dp" />

    <RadioGroup
        android:id="@+id/radiobtn1"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/radiobtnCo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Có" />

        <RadioButton
            android:id="@+id/radiobtnkhong1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Không" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Trong vòng 14 ngày có dấu hiệu hô, sốt, khó thở,... không ? "
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="616dp" />

    <RadioGroup
        android:id="@+id/radiobtn2"
        android:layout_width="297dp"
        android:layout_height="29dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/radiobtnCo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Có" />

        <RadioButton
            android:id="@+id/radiobtnKhong2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Không" />
    </RadioGroup>

</LinearLayout>



