<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout"
    android:orientation="vertical"
    tools:context=".fragment.HoSoCaNhanFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Hồ Sơ Cá Nhân "
        android:textColor="#F9FAFB"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="666dp"
    android:orientation="vertical"
    android:background="@drawable/bogoclayout"
    android:layout_marginTop="30dp"
>
    <TextView
        android:id="@+id/tv_hoten1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Họ tên:"
        android:layout_below="@+id/tv_maTV"
        android:textColor="#050505"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_namsinh1"
        android:text="Ngày tháng năm sinh:"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tv_hotenTV"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_diachi1"
        android:text="Địa chỉ:"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tv_namsinh"
        android:textColor="#009688"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_gioitinh1"
        android:text="Giới tính:"
        android:layout_below="@+id/tv_diachi"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sodienthoai1"
        android:text="SĐT:"
        android:layout_below="@+id/tv_gioitinh"
        android:textColor="#673AB7"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_socancuoc1"
        android:text="Số Căn Cước:"
        android:layout_below="@+id/tv_sodienthoai"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sobaohiemyte1"
        android:text="Bảo Hiểm Y tê:"
        android:layout_below="@+id/tv_socancuoc"
        android:textColor="#8BC34A"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_thoihantu1"
        android:text="Thời hạn từ ngày:"
        android:layout_below="@+id/tv_sobaohiemyte"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_thoihanden1"
        android:text="Thời hạn đến ngày:"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_thoihantu"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_quoctich1"
        android:text="Quốc tịch:"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_below="@+id/tv_thoihanden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_tongiao1"
        android:text="Tôn Giáo:"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:padding="3dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/tv_quoctich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
       >
        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"


            android:backgroundTint="#E48EED"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:text="update"
            android:id="@+id/btnupdate"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"

            android:backgroundTint="#E48EED"
            android:drawableLeft="@drawable/ic_baseline_cancel_24"
            android:text="Logout"
            android:id="@+id/btnlogout"/>
    </LinearLayout>
</LinearLayout>


