<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_layout"
    tools:context=".activity.khaibaoyte.man2">

    <TextView
        android:id="@+id/TKYT"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Tờ Khai Y Tế"
        android:background="#CE53DC"
        android:textColor="#F9FAFB"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="31dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bogoclayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/EDHT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:hint="Họ Tên : "
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="261dp" />


            <EditText
                android:id="@+id/EDNS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:hint="Năm Sinh : "
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="354dp" />


            <EditText
                android:id="@+id/EDCCCD"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:ems="10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:hint="CCCD : "
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="447dp" />


            <EditText
                android:id="@+id/EDQT"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:hint="Quốc Tịch : "
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="171dp" />


            <EditText
                android:id="@+id/EDNOHT"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
               android:hint="Địa Chỉ : "
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="85dp" />

            <EditText
                android:id="@+id/EDSDT"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:ems="10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:hint="SĐT : "
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="171dp" />

            <TextView
                android:id="@+id/TV1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Trong vòng 14 ngày có đi qua khu vực/lãnh  thổ nào không ? "
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="516dp" />

            <RadioGroup
                android:id="@+id/radiobtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">


                <RadioButton
                    android:id="@+id/RDOC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Có" />

                <RadioButton
                    android:id="@+id/RDOK1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Không" />
            </RadioGroup>

            <TextView
                android:id="@+id/TV2"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Trong vòng 14 ngày có dấu hiệu hô, sốt, khó thở,... không ? "
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="616dp" />

            <RadioGroup
                android:id="@+id/radiobtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">


                <RadioButton
                    android:id="@+id/RDOC2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Có" />

                <RadioButton
                    android:id="@+id/RDOK2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Không" />
            </RadioGroup>

            <Button
                android:id="@+id/btnTST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Tờ Khai"
                android:textStyle="bold"
                android:backgroundTint="#CC3CD1"
                android:layout_marginLeft="250dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>